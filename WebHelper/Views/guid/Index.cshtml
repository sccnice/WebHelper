
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2>获取GUID</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <label for="txt_guid">GUID</label>
                        <input type="text" class="form-control" id="txt_guid" placeholder="Email">
                    </div>
                    <button type="button" id="btn_getGuid" class="btn btn-default">Get</button>
                </form>
            </div>
        </div>
        </div>
</div>
    <script type="text/javascript">
        window.onload = function () {
        $('#btn_getGuid').on('click', function () {
            $.post('@Url.Action("GetGuid", "guid")', {}, function (data) {
                console.log(data);
                $('#txt_guid').val(data.Data);

            });



        });

        }

    </script>
